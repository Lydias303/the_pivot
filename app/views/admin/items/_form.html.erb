<%= form_for [:admin, @item], :html => {:multipart => true} do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %>
  <%= f.label "Description" %>
  <%= f.text_field :description %>
  <%= f.label "Price" %>
  <%= f.text_field :price %>
  <%= f.label "Categories" %>
  <%= f.collection_select(:categories,
                          @categories,
                          :id,
                          :name,
                          {},
                          multiple: true) %>
  <%= f.label "Image" %>
  <%= f.file_field :image %>
  <%= f.submit %>
<% end %>
