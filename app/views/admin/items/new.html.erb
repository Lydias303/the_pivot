<%= form_for [:admin, @item], url: { action: "create" } do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %>
  <%= f.label "Description" %>
  <%= f.text_field :description %>
  <%= f.label "Price" %>
  <%= f.text_field :price %>
  <%= f.label "Categories" %>
  <%= f.text_field :categories %>
  <%= f.submit "Create" %>
<% end %>
