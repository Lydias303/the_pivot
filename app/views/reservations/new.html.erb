<h1>Your Reservations</h1>

<% if @reservation.listings.empty? %>
  <p> Your cart is empty </p>
<% else %>
<table class="table table-hover">
  <tr>
    <th>Listing</th>
    <th>Name</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
    <th>Change Status</th>
  </tr>
  <% listings.each do |listing| %>
    <% listing.reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.id %></td>
        <td><%= link_to reservation.listing.title, user_listing_path(listing.user.slug, listing) %></td>
        <td><%= link_to reservation.user.full_name, user_path(user.id) %></td>
        <td><%= listing.start_date %></td>
        <td><%= listing.end_date %></td>
      </tr>
    <% end %>
  <% end %>
</table>
  <h3>Total: <%= number_to_currency @reservation.total(@reservation.reservation_listings) %></h3>
  <div id="checkout">
    <%= button_to "Checkout", reservations_path, method: :post %>
  </div>
<% end %>
