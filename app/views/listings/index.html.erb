    <%= radio_button_tag(:max_guests, 8) %><br>
    <%= label_tag(9) %>
    <%= radio_button_tag(:max_guests, 9) %><br>
    <%= label_tag(10) %>
    <%= radio_button_tag(:max_guests, 10) %><br>
    <%= label_tag(11) %>
    <%= radio_button_tag(:max_guests, 11) %><br>
    <%= label_tag(12) %>
    <%= radio_button_tag(:max_guests, 12) %><br>
    <%= label_tag(13) %>
    <%= radio_button_tag(:max_guests, 13) %><br>
    <%= label_tag(14) %>
    <%= radio_button_tag(:max_guests, 14) %><br>
    <%= label_tag(15) %>
    <%= radio_button_tag(:max_guests, 15) %><br>
    <%= label_tag("16+") %>
    <%= radio_button_tag(:max_guests, 16) %><br>
    <%= submit_tag "Filter by guests", class: "btn btn-lg btn-default" %>
  <% end %>
  </div>
</div>

<div class="col-md-6">
  <%= div_for(@listings) do |listing| %>
  <%= link_to listing.title, user_listing_path(listing.user.slug, listing) %><br>
  <%#= link_to listing.title, user_listing_path(listing.user_id, listing) %><br>
  <%= listing.listing_image %> %>
  Property Category: <%= listing.category.name %><br>
  Property Description: <%= listing.description %><br>
  Nightly Rate: <%= number_to_currency(listing.currency) %><br>
  Max Guests: <%= listing.max_guests %><br>
  <% end %>
</div>
