    <%= label_tag("Room") %>
    <%= radio_button_tag(:category_id, 5) %><br>
    <!-- <%= submit_tag "Filter by listing category", class: "btn btn-lg btn-default" %> -->
    <% end %>
  </div>
  <div id="form-group">
    <%= form_tag("/listings", method: "get") do %>
    Nightly Rates<br>
    <%= label_tag("<$75") %>
