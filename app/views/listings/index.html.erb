<h2 class="prop-listings">All Property Listings</h2>

<div id="form-horizontal", class: "col-sm-2 control-label">
  <%= form_tag("/listings", method: "get") do %>
  <div id="form-group">
    <%= label_tag(:city, "City") %><br>
    <%= text_field_tag(:city, "City")%><br>
    <!-- <%= submit_tag "Filter by city", class: "btn btn-lg btn-default" %><br> -->
    <% end %>
  </div>
  <div id="form-group">
    <%= form_tag("/listings", method: "get") do %>
