    <%= label_tag("<$300") %>
    <%= radio_button_tag(:nightly_rate, 30000) %><br>
    <%= label_tag("<$500") %>
    <%= radio_button_tag(:nightly_rate, 50000) %><br>
    <!-- <%= submit_tag "Filter by price", class: "btn btn-lg btn-default" %> -->
    <% end %>
  </div>
  <div id="form-group">
  <%= form_tag("/listings", method: "get") do %>
    Guests<br>
    <%= label_tag(1) %>
    <%= radio_button_tag(:max_guests, 1) %><br>
    <%= label_tag(2) %>
    <%= radio_button_tag(:max_guests, 2) %><br>
    <%= label_tag(3) %>
    <%= radio_button_tag(:max_guests, 3) %><br>
    <%= label_tag(4) %>
    <%= radio_button_tag(:max_guests, 4) %><br>
